extends layout

block content
  .container-fluid
    .row-fluid
      .span3
        .well.sidebar-nav
          ul.nav.nav-list
            li.nav-header Projects
            each name in projects
              if name !== 'dir'
                li
                  a(href='/p/#{name}') #{name}
            each uri, name in external_projects
              li
                a(href='#{uri}') #{name}
        .well.sidebar-nav
          ul.nav.nav-list
            li.nav-header How to add a project
            li
              ol
                li <a href='http://github.rackspace.com'>Mirror code to internal github</a><br>- <a href="http://dev.rax.io/">svn how to</a>
                li <a href='http://github.com/racker/devopsjson'>Create devops.json file</a><br>- <a href="https://github.com/racker/gutsy/blob/master/devops.json">example</a><br>- <a href="http://devopsjson.com/">validator</a>
                li <a href='http://dashboard.rax.io/p/Gutsy'>Tell us</a>
            li <a href='http://www.youtube.com/watch?v=dqv0cgSyfHQ'>More information</a>

      .span9
        .hero-unit
          h1 All of the Dashboards
          h2

    script(src='/static/jquery/jquery-1.7.1.min.js')
    script(src='/static/bootstrap/js/bootstrap.min.js')
