extends layout

block content
  | <script >
  | $(function() {
  |   $('.table-stats').tablesorter();
  | });
  | </script>
  .container
    .content
      if github
          h1 Development Health
          if github.error
            p An error occurred: #{github.error}
          else if github.data.error
            p API returned the following error:
            p.alert #{github.data.error.code}: #{github.data.error.message}
          else

            h2 Repo: #{github.data.repo}
            hr

            each metric in github.data.metrics
              h3 #{metric.name}
              table.table.table-striped.table-bordered.table-condensed.table-stats
                thead
                  tr
                    th Username
                    th #{metric.unit}
                tbody
                  each stat in metric.stats
                    each key, val in stat
                      tr
                        td #{val}
                        td #{key}
