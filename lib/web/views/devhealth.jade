extends layout

block content
  | <script >
  | $(function() {
  |   $("table#defects").tablesorter();
  | });
  | </script>
  .container
    .content
      if github
          h1 Development Health
          if github.error
            p An error occurred: #{github.error}
          else if github.data.error
            p API returned the following error:
            p.alert #{github.data.error.code}: #{github.data.error.message}
          else
            ul
             each metriclist, metricname in github.data
               li #{metricname}
                 ul
                   each val, name in metriclist
                     li #{name}: #{val}
