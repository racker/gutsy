extends layout

block append css
  | <style type="text/css">
  | #notes-form input{
  |   width: 300px;
  | }
  | #notes-form .form-submit {
  |   margin-left: 50px;
  | }
  | .note{
  |   border-bottom: 1px dashed #ddd;
  |   padding: 16px 0;
  | }
  | .note p{
  |   line-height: 20px;
  | }
  | p.title{
  |   font-weight: bold;
  |   font-size: 17px;
  | }
  | .note div.body{
  |   font-size: 14px;
  |   padding: 0 5px;
  | }
  | p.links{
  |   padding-top: 5px;
  |   margin: 0;
  |   font-size: 11px;
  |   font-weight: bold;
  | }
  | h3.deploy-info{
  |   color: #f00;
  |   background-color: #ffdfdf;
  |   padding: 10px;
  |   border: 1px solid #f00;
  | }
  | </style>

block content
  .container
    .content
      h1 Release Notes

      -var errors = errors
      if (errors)
        p.alert!=trace(errors)

      p
        | This will take some time, be patient.  The dates can be anyting that new Date() will parse and are inclusive.

      -var id = "notes-form"
      include includes/time_form

      p
        | NOTE: gutsy stops looking at pull requests when they were created one month before the start date since github returns pull requests in order of creation and doesn't allow filtering of any sort.

      hr(style="margin-top: 20px; margin-bottom: 10px;")

      -var notes = notes
      -var demarcator = false

      if notes
        if notes[0] && notes[0].merged_at > to_revision_time
          h3.deploy-info Undeployed, Merged Pull Requests
        each note in notes
          if to_revision_time && !demarcator && to_revision_time.valueOf() > (note.merged_at.valueOf() - 5000)
            h3.deploy-info
              a(href="https://"+dread_host) Deployed #{humane_time(to_revision_time)}
              -demarcator = true;

          div.note
            p.title
              =note.title
              | <nbsp/> -
              =humane_time(note.merged_at || note.v1.change_date)
              | <nbsp/>
              if note.v1.type
                |  -
                | <nbsp/>
                #{note.v1.type}
            div.body
              !{markdown(note.body)}
              if note.v1.error
                !{trace(note.v1.error)}
              if note.v1.body
                !{note.v1.body}
              p.links
                if note.merged_at !== undefined
                  | - merged
                  nbsp
                  i=format_time(note.merged_at)
                  | <nbsp/>
                  a(href=note.github_pr_href) on github
                if note.v1.id !== undefined
                  br
                  | - created
                  nbsp
                  i=format_time(note.v1.create_date)
                  | <nbsp/>
                  a(href=v1.id_to_url(version_one.get_config(), note.v1.id)) on V1

      -var start = start;
      -var end = end;
      -var cutoff = cutoff;

      if (start && end)
        p Notes between #{start} and #{end}
